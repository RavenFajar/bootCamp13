@{
}
@model List<DepartmentPortal.Models.Entities.Department>

<h2>All Subject</h2>
<a class="btn btn-success mb-3" asp-controller="Employee" asp-action="Addartment"><Address> <Address> Employee</Address></Address></a>

<table class="table">
    <thead>
        <tr>
            <th>No</th>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @for(int i=0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model[i].Id</td>
                <td>@Model[i].Name</td>
                <td>@Model[i].Location</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@Model[i].Id" class="btn btn-primary">Edit</a>
                    <form method="post" 
                        asp-controller="Employee" 
                        asp-action="Delete" 
                        asp-route-id="@Model[i].Id">
                        <button class="btn btn-danger" type="submit">Delete</button>
                    </form>                
                </td>
            </tr>
        })
    </tbody>
        }